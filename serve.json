{
  "public": ".",
  "cleanUrls": false,
  "trailingSlash": false,
  "directoryListing": false,
  "symlinks": true,
  "dotfiles": true,
  "etag": true,
  "cors": true,
  "headers": [
    {
      "source": "**/*.{png,jpg,jpeg,gif,ico,svg}",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "**/*.{js,css,html}",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "public, max-age=300"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    }
  ]
}